<view class="page">
  <view class="message-list">
    <view class="scroll-box">
      <scroll-view class="scroll" scroll-y>
        <!-- start:message-item -->
        <view bindtap="handleIntoRoom" data-room-id="{{item._id}}" class="item" wx:for="{{messageList}}" wx:key="{{item._id}}">
          <view class="avatar">
            <custom-image width="{{100}}" height="{{100}}" src="{{item.avatar}}"></custom-image>
          </view>
          <view class="content">
            <view class="name">{{item.name}}</view>
            <view class="last-message">{{item.lastMessage}}</view>
          </view>
        </view>
        <!-- end:message-item -->
      </scroll-view>
    </view>
  </view>
</view>