.page {
  display: flex;
  flex-direction: column;
}
.content {
  flex: 1;
  position: relative;
  background-color: green;
}
.scroll {
  padding: 0 12rpx;
}
.form {
  flex: none;
  padding: 24rpx;
  height: 66rpx;
  display: flex;
  flex-direction: row;
}
.form .input {
  flex: 1;
  padding: 8rpx;
  border: 1px solid rgba(208, 208, 208, 0.5);
  box-sizing: border-box;
  line-height: 48rpx;
  height: 66rpx;
  font-size: 36rpx;
}
