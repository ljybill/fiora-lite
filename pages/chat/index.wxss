.page {
  display: flex;
  flex-direction: column;
}
.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.content {
  flex: 1;
  position: relative;
}
.scroll {
  padding: 12rpx 12rpx 0;
  box-sizing: border-box;
}
.form {
  flex: none;
  padding: 24rpx;
  height: 66rpx;
  display: flex;
  flex-direction: row;
  background-color: rgba(208, 208, 208, 0.5);
}
.form .input {
  flex: 1;
  padding: 8rpx;
  box-sizing: border-box;
  line-height: 48rpx;
  height: 66rpx;
  font-size: 36rpx;
}
